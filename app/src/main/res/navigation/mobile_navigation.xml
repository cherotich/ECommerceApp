<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_orders">

    <fragment
        android:id="@+id/nav_cart"
        android:name="com.example.ecommerceapp.ui.home.HomeFragment"
        android:icon="@drawable/cart"
        android:title="Orders"
        android:iconTint="@android:color/white"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_orders"
        android:name="com.example.ecommerceapp.ui.home.HomeFragment"
        android:icon="@drawable/orders"
        android:title="Orders"
        android:iconTint="@android:color/white"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_category"
        android:name="com.example.ecommerceapp.ui.gallery.GalleryFragment"
        android:icon="@drawable/category"
        android:title="Categories"
        android:iconTint="@android:color/white"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_settings"
        android:name="com.example.ecommerceapp.ui.tools.ToolsFragment"
        android:icon="@drawable/ic_menu_manage"
        android:title="Settings"
        android:iconTint="@android:color/white"
        tools:layout="@layout/settings" />

    <fragment
        android:id="@+id/nav_logout"
        android:name="com.example.ecommerceapp.ui.tools.ToolsFragment"
        android:icon="@drawable/logout"
        android:title="Logout"
        android:iconTint="@android:color/white" />


</navigation>